@using Microsoft.Build.Framework
@model IEnumerable<TestProj.Entities.Product>

@{
    ViewData["Title"] = "GetAll";
}

<h1>All Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFlagged)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFlagged)
                </td>

                <td>
                    @Html.ActionLink("Details", "Details", new { @item.Id }) |
                    @using (Html.BeginForm("FlagProduct", "Home", FormMethod.Post, new { @class = "inline" }))
                    {
                        @Html.Hidden("id", item.Id)
                        <button type="submit" class="link-button">Flag</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
    }

    .table tbody + tbody {
        border-top: 2px solid #dee2e6;
    }

    .link-button {
        background: none!important;
        border: none;
        padding: 0!important;
        font-family: arial, sans-serif;
        color: #007bff;
        text-decoration: underline;
        cursor: pointer;
    }
</style>
